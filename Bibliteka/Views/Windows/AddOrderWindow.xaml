<Window x:Class="Bibliteka.Views.Windows.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliteka.Views.Windows"
        mc:Ignorable="d"
                Title="Добавить заказ" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Гость:"/>
            <ComboBox x:Name="GuestComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>
            <TextBlock Text="Блюдо:"/>
            <ComboBox x:Name="DishComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>
            <TextBlock Text="Статус:"/>
            <ComboBox x:Name="StatusComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>
            <Border Height="10"/>
            <Button Content="Добавить" Click="AddButton_Click" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
